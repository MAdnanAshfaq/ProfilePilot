{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "outputDirectory": "dist",
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts"
    },
    {
      "src": "^/assets/(.*)",
      "dest": "/client/dist/assets/$1"
    },
    {
      "src": "^/(?!api).*",
      "dest": "/client/dist/index.html"
    }
  ]
} 